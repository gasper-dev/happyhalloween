---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <div class="bg-opacity-90 rounded-lg p-8 text-center shadow-lg">
    <h1 class="text-7xl font-bold mb-4 animate-pulse">Boo!</h1>
    <p class="text-xl mb-6">
      The page you are looking for has vanished into the fog...
    </p>
    <p class="mb-6">Perhaps a ghost took it away.</p>
    <a
      href="/"
      class="bg-red-600 hover:bg-red-500 text-white font-semibold py-2 px-4 rounded transition duration-300"
      >Return Home</a
    >
  </div>
</Layout>
